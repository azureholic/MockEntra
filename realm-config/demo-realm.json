{
  "realm": "local-development",
  "enabled": true,
  "displayName": "Local Development",
  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "accessCodeLifespanLogin": 1800,
  "actionTokenGeneratedByAdminLifespan": 43200,
  "actionTokenGeneratedByUserLifespan": 300,
  "oauth2DeviceCodeLifespan": 600,
  "oauth2DevicePollingInterval": 5,
  "clients": [
    {
      "clientId": "demo-client",
      "name": "Demo Client Application",
      "description": "Client application that can request tokens for API access",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "demo-client-secret",
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "attributes": {
        "access.token.lifespan": "300",
        "client.secret.creation.time": "1642000000"
      },
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:8081/*",
        "urn:ietf:wg:oauth:2.0:oob"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:8081"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt",
        "api-access"
      ]
    },
    {
      "clientId": "demo-api",
      "name": "Demo API",
      "description": "API resource server",
      "enabled": true,
      "bearerOnly": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "attributes": {
        "access.token.lifespan": "300"
      }
    }
  ],
  "clientScopes": [
    {
      "name": "api-access",
      "description": "Access to demo API",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true",
        "consent.screen.text": "Access to Demo API"
      },
      "protocolMappers": [
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "demo-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "api-user",
        "description": "User with API access"
      },
      {
        "name": "api-admin",
        "description": "Admin with full API access"
      }
    ],
    "client": {
      "demo-api": [
        {
          "name": "read",
          "description": "Read access to API"
        },
        {
          "name": "write",
          "description": "Write access to API"
        },
        {
          "name": "admin",
          "description": "Admin access to API"
        }
      ]
    }
  },
  "users": [
    {
      "username": "demo-user",
      "enabled": true,
      "email": "demo@example.com",
      "firstName": "Demo",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "demo-password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "api-user"
      ],
      "clientRoles": {
        "demo-api": [
          "read",
          "write"
        ]
      }
    },
    {
      "username": "admin-user",
      "enabled": true,
      "email": "admin@example.com",
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "admin-password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "api-admin"
      ],
      "clientRoles": {
        "demo-api": [
          "read",
          "write",
          "admin"
        ]
      }
    }
  ],
  "scopeMappings": [
    {
      "client": "demo-client",
      "roles": [
        "api-user"
      ]
    }
  ]
}
